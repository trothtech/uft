uftcnote.h:	makefile uftcnote.txt
		cat uftcnote.txt > uftcnote.tmp
		echo "" >> uftcnote.tmp
		echo "char *uftcnote[" \
			`cat uftcnote.tmp | wc -l` "] = {" > uftcnote.h
		rm uftcnote.tmp
		awk '{print "\"" $$0 " \","}' \
			< uftcnote.txt >> uftcnote.h
		echo "\"\"};" >> uftcnote.h

